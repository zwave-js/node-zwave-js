    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "@xstate/test": "^0.4.2",
    "ansi-colors": "^4.1.1",
    "axios": "^0.21.1",
    "clipboardy": "^2.3.0",
    "comment-json": "^4.1.0",
    "commitizen": "^4.2.4",
