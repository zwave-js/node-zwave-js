    "@fimbul/wotan": "^0.24.0",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/js-levenshtein": "^1.1.0",
    "@types/json-logic-js": "^1.2.1",
