{
	"$schema": "http://json-schema.org/schema#",
	"type": "object",
	"properties": {
		"basic": {
			"type": "object",
			"patternProperties": {
				"0x\\d{2}": {
					"type": "string"
				}
			}
		},
		"generic": {
			"type": "object",
			"patternProperties": {
				"0x[0-9a-f]{2}": {
					"properties": {
						"label": { "type": "string" },
						"zwavePlusDeviceType": {
							"type": "string"
						},
						"requiresSecurity": {
							"const": true
						},
						"supportedCCs": {
							"$ref": "#/definitions/CCs"
						},
						"controlledCCs": {
							"$ref": "#/definitions/CCs"
						},
						"maySupportBasicCC": {
							"const": false
						},
						"specific": {
							"type": "object",
							"patternProperties": {
								"0x[0-9a-f]{2}": {
									"properties": {
										"label": { "type": "string" },
										"zwavePlusDeviceType": {
											"type": "string"
										},
										"requiresSecurity": {
											"const": true
										},
										"supportedCCs": {
											"$ref": "#/definitions/CCs"
										},
										"controlledCCs": {
											"$ref": "#/definitions/CCs"
										},
										"maySupportBasicCC": {
											"const": false
										}
									},
									"required": ["label"],
									"additionalProperties": false
								}
							},
							"additionalProperties": false
						}
					},
					"required": ["label"],
					"additionalProperties": false
				}
			}
		}
	},
