{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"prebuild": {
			// Prebuild requires the dependencies to be built
			"dependsOn": ["^build"]
		},
		"build": {
			"dependsOn": ["prebuild", "^build"]
		},
		"lint": {
			"outputs": []
		},
		// "test": {},

		// Don't forget to run test in root:
		"//#test": {
			"dependsOn": ["build"],
			"outputs": []
		}
	},
	"globalDependencies": [
		// Build fresh when build configuration changes:
		".eslintrc.js",
		".eslintignore",
		".prettierrc.js",
		".prettierignore",
		// Build fresh when TS related stuff changes
		"tsconfig.json",
		"tsconfig.build.json",
		"*.tsbuildinfo"
	]
}
