{
  "name": "@zwave-js/shared",
  "version": "10.3.0",
  "description": "zwave-js: shared utilities",
  "keywords": [],
  "publishConfig": {
    "access": "public",
    "$types": "build/index.d.ts",
    "$typesVersions": {
      "*": {
        "safe": [
          "build/index_safe.d.ts"
        ]
      }
    }
  },
  "main": "build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./package.json": "./package.json",
    "./safe": "./build/index_safe.js"
  },
  "types": "src/index.ts",
  "typesVersions": {
    "*": {
      "safe": [
        "src/index_safe.ts"
      ]
    }
  },
  "files": [
    "build/**/*.{js,d.ts,map}"
  ],
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "license": "MIT",
  "homepage": "https://github.com/AlCalzone/node-zwave-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/node-zwave-js.git"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/node-zwave-js/issues"
  },
  "funding": {
    "url": "https://github.com/sponsors/AlCalzone/"
  },
  "engines": {
    "node": ">=14.13.0 <15 || >= 16 <16.9.0 || >16.9.0"
  },
  "dependencies": {
    "alcalzone-shared": "^4.0.8",
    "fs-extra": "^10.1.0"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "clean": "del-cli build/ \"*.tsbuildinfo\"",
    "extract-api": "yarn api-extractor run",
    "//watch": "yarn run build --watch --pretty",
    "lint:ts": "eslint --ext .ts --rule \"prettier/prettier: off\" \"src/**/*.ts\"",
    "lint:ts:fix": "yarn run lint:ts --fix",
    "lint:prettier": "prettier -c \"src/**/*.ts\"",
    "lint:prettier:fix": "yarn run lint:prettier -w",
    "test:ts": "ava"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "*",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^14.18.29",
    "@types/sinon": "^10.0.13",
    "ava": "^4.3.3",
    "del-cli": "^5.0.0",
    "esbuild": "0.15.7",
    "esbuild-register": "^3.3.3",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "typescript": "4.9.4"
  }
}
