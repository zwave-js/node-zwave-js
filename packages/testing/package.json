  "description": "zwave-js: testing utilities",
  "keywords": [],
  "publishConfig": {
    "access": "public"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**/*.{js,d.ts,map}"
  ],
  "author": {
    "name": "AlCalzone",
