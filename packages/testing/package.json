  "devDependencies": {
    "@microsoft/api-extractor": "^7.35.0",
    "@types/node": "^14.18.43",
    "@types/triple-beam": "^1.3.2",
    "del-cli": "^5.0.0",
    "esbuild": "0.15.18",
    "esbuild-register": "^3.4.2",
    "prettier": "^2.8.8",
    "triple-beam": "*",
    "typescript": "4.9.5",
    "winston-transport": "^4.5.0"
