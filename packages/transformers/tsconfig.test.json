// tsconfig for building - only applies to the src directory
{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"composite": false,
		"outDir": "test/build",
		"declaration": false,
		"declarationMap": false,
		"sourceMap": false,
		"plugins": [
			{
				"transform": "./build/validateArgs2/transformProgram.js",
				"transformProgram": true
			},
			{ "transform": "./build/validateArgs2/transformDecorators.js" }
		],
		"incremental": false
	},
	"include": ["test/fixtures/**/*.ts"]
	// "include": ["test/fixtures/testLiteral.ts"]
}
