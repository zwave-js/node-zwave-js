    "@types/jest": "^27.5.1",
    "@types/node": "^14.18.21",
    "@zwave-js/testing": "workspace:*",
    "ansi-colors": "^4.1.3",
    "esbuild": "0.14.48",
    "esbuild-register": "^3.3.2",
