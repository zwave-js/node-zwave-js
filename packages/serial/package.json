{
  "name": "@zwave-js/serial",
  "version": "10.1.0",
  "description": "zwave-js: Serialport driver",
  "publishConfig": {
    "access": "public",
    "$types": "build/index.d.ts",
    "$typesVersions": {
      "*": {
        "mock": [
          "build/index_mock.d.ts"
        ],
        "safe": [
          "build/index_safe.d.ts"
        ]
      }
    }
  },
  "main": "build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./package.json": "./package.json",
    "./mock": "./build/index_mock.js",
    "./safe": "./build/index_safe.js"
  },
  "types": "src/index.ts",
  "typesVersions": {
    "*": {
      "mock": [
        "src/index_mock.ts"
      ],
      "safe": [
        "src/index_safe.ts"
      ]
    }
  },
  "keywords": [],
  "files": [
    "build/**/*.{js,d.ts,map}"
  ],
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "license": "MIT",
  "homepage": "https://github.com/AlCalzone/node-zwave-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/node-zwave-js.git"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/node-zwave-js/issues"
  },
  "funding": {
    "url": "https://github.com/sponsors/AlCalzone/"
  },
  "engines": {
    "node": ">=14.13.0 <15 || >= 16 <16.9.0 || >16.9.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "extract-api": "yarn api-extractor run",
    "//clean": "tsc -b tsconfig.build.json --clean",
    "//watch": "yarn run build --watch --pretty",
    "lint:ts": "eslint --ext .ts --rule \"prettier/prettier: off\" \"src/**/*.ts\"",
    "lint:ts:fix": "yarn run lint:ts --fix",
    "lint:prettier": "prettier -c \"src/**/*.ts\"",
    "lint:prettier:fix": "yarn run lint:prettier -w"
  },
  "dependencies": {
    "@sentry/node": "^7.8.1",
    "@serialport/stream": "^10.3.0",
    "@zwave-js/core": "workspace:*",
    "@zwave-js/host": "workspace:*",
    "@zwave-js/shared": "workspace:*",
    "alcalzone-shared": "^4.0.8",
    "serialport": "^10.4.0",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "*",
    "@serialport/binding-mock": "^10.2.2",
    "@serialport/bindings-interface": "*",
    "@types/jest": "^27.5.2",
    "@types/node": "^14.18.26",
    "@zwave-js/testing": "workspace:*",
    "ansi-colors": "^4.1.3",
    "esbuild": "0.14.51",
    "esbuild-register": "^3.3.3",
    "jest-extended": "^2.0.0",
    "prettier": "^2.7.1",
    "typescript": "4.8.2"
  }
}
