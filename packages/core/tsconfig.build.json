// tsconfig for building - only applies to the src directory
{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "build",
	},
	"references": [
		{
			"path": "../shared/tsconfig.build.json"
		}
	],
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/**/*.test.ts",
	]
}
