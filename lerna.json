{
	"packages": ["packages/*"],
	"useWorkspaces": true,
	"npmClient": "yarn",
	"version": "8.0.0-alpha.3",
	"command": {
		"run": {
			"stream": true
		},
		"version": {
			"allowBranch": ["master", "release-*", "next"],
			"ignoreChanges": ["*.md"],
			"exact": true,
			"amend": true,
			"push": false
		}
	}
}
